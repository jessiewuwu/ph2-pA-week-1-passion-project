<div id="fave_container">

  <h1>Your Favorites!</h1>

  <% if @user_faves.empty? %>
    <p>You currently have no favorites. Check out the <a href="/browse">Browse</a>page for available dogs.</p>

  <% else %>
      <% @user_faves.each do |fave| %>
  <div class="whole">
  <div class="type">
    <p>FAVORITE</p>
    </div>
  <div class="plan">

    <div class="dog-name-header">
      <sup><%= Dog.find(fave.dog_id).name  %></sup>
    </div>
    <div class="content">
        <a href="/dogs/<%= fave.dog_id%>"><img src="<%= Dog.find(fave.dog_id).image_link%>" height="170px"></a>
        <p>Breed: <%= Dog.find(fave.dog_id).breed%></p>
        <p>Sex: <%= Dog.find(fave.dog_id).gender%></p>
        <% if Dog.find(fave.dog_id).favorites.count == 1 %>
        <p>Favorited <strong><%= Dog.find(fave.dog_id).favorites.count%></strong> time</p>
        <% else %>
        <p>Favorited <strong><%= Dog.find(fave.dog_id).favorites.count%></strong> times</p>
        <% end %>

    </div>

    <div class="price">
      <a href="/dogs/<%= fave.dog_id%>" class="bottom"><p class="cart">Red Ball Rating Profile</p></a>
    </div>
  </div>
    <button><a href="/dogs/<%= fave.dog_id%>">Remove from Favorites</a></button>
</div>
      <% end %>
<% end %>
