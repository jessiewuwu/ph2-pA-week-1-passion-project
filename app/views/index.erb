  <img src="http://image10.photobiz.com/4773/37_20130731095359_816837_large.jpg" class="banner_pic"/>


  <div class="banner_section">
    <h1 class="logo_text">red</h1>
    <img src="./imgs/redballlogo.png" width="200px" class="logo_pic" />
    <h1 class="logo_text">ball</h1>
    <h2 class="tagline">let's play</h2>


    <form action="/search/results" method="get">
    <input type='text' name='breed' placeholder="What breed are you interested in?" size="45" id="search_spot">
    <input type='submit' value='submit' style="visibility: hidden;">
    </form>

  </div>
<div class="sub_container">

  <h2>adopt a new friend today!</h2>
  <p>see what our volunteers have to say about the wonderful dogs available for adoption and foster.</p>


  <% if logged_in? %>
    <div class="welcome">

     <h3 style="padding-top:50px">You are now logged in.</h3>

    </div>

  <% else %>

  <div class="login_section">
    <button><h2>Log In</h2></button>
    <form action="/login" method="post" id="login_form">
      <input type='text' name='username' placeholder='username'>
      <input type='password' name='password' placeholder='password'><br>
      <input type='submit' value='submit' class='submit_button'>
    </form>


    <% if @error %>
      <p>Username or password is incorrect.</p>
    <% end %>

  </div>



  <div class="register_section">
    <button><h2>Register as a New User</h2></button>
    <form action="/register" method="post" id="register_form">
      <input type='text' name='name' placeholder="name">
      <input type='text' name='email' placeholder="email"><br>
      <input type='text' name='username' placeholder="username">
      <input type='password' name='password' placeholder="password"><br>
      <input type='submit' value='submit' class='submit_button'>
    </form>

    <%= @invalid_error %>
  </div>


  <% end %>

</div>
<div class="spacing"></div>

