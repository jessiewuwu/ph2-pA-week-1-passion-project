<div class="playground_section">
  <h2>Add dogs to the Playground!</h2>
  <h3>Drag the dog's photo here and click on it to get their profile</h3>
</div>

<div id="hide_show">
  <button id="hide">Hide Playground</button>
  <button id="show">Show Playground</button>
</div>

<div class="browse_container">

  <div class="browse_list">
      <% @all_dogs.each_slice(3) do |row| %>
      <br>
      <div class="row">
          <% row.each do |dog| %>
          <% if dog.id.to_i % 3 == 1 %>
            <div class="left_column" id="<%=dog.id%>">

                <img src= <%= dog.image_link %> style="float:left; margin: 0 15px 0 0;" class="browse_dog_pic" id="<%=dog.id%>"/>

                <a href="/dogs/<%=dog.id%>"> <%= dog.name %>'s Full Profile</a>
            </div>

            <% elsif dog.id.to_i % 3 == 2 %>
              <div class="center_column" id="<%=dog.id%>">

                <img src= <%= dog.image_link %> style="float:left; margin: 0 15px 0 0;" class="browse_dog_pic" id="<%=dog.id%>"/>

                <a href="/dogs/<%=dog.id%>"> <%= dog.name %>'s Full Profile</a>
             </div>

             <% elsif dog.id.to_i % 3 == 0 %>
               <div class="right_column" id="<%=dog.id%>">

                   <img src= <%= dog.image_link %> style="float:left; margin: 0 15px 0 0;" class="browse_dog_pic" id="<%=dog.id%>"/>

                   <a href="/dogs/<%=dog.id%>"> <%= dog.name %>'s Full Profile</a>
               </div>
               <% else %>
                <h1>THE IF STATEMENTS DIDNT WORK</h1>
              <% end %>
            <%end%>
        <br>
    </div>
        <% end %>
  </div>

  <div class="clear"></div>
</div>

